class Solution {
    public int minimumTotal(List<List<Integer>> t) {
        int n = t.size();
        int dp[][] = new int[n][n];

        for(int i = n-1;i >=0 ;i--){
            for(int j = 0;j<=i;j++){
                if(i == n-1)dp[i][j] = t.get(i).get(j);
                else {
                    int min = Math.min(dp[i+1][j], dp[i+1][j+1]);
                    dp[i][j] = min + t.get(i).get(j);
                }
            }
        }
        return dp[0][0];
    }
}
